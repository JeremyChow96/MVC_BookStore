@{
    ViewData["Title"] = "Home";
    var data = ViewBag.Data;
}
@inject BookStoreWeb.Repository.IBookRepository _bookRepository

<section class="jumbotron text-center">
    <div class="container">
        <h1> Welcome to Bookstore! = @ViewData["CustomProperty"] </h1>
        <environment names="Development">
            <h3>Development</h3>
        </environment>
        <environment names="Production">
            <h3>Production</h3>
        </environment>

        <p class="lead text-muted">
           @ViewData["Name"] <br/>
            my first web store mvc web application learning!
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search books</a>
        </p>
        @foreach (var item in await _bookRepository.GetAllBooks())
        {
            <h2>@item.Title</h2>
        }
    </div>
</section>


<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top books</h3>
        @* @await  Component.InvokeAsync("TopBooks")*@
        <vc:top-books count="3"></vc:top-books>
       
    </div>
</div>

